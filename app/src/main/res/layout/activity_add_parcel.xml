<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter percal fields"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="parcel type"/>
        <EditText
            android:id="@+id/Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 1 / 2 / 3"
            android:inputType=""/>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="breakable " />
        <EditText
            android:id="@+id/Breakable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 0 / 1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="weight"/>
        <EditText
            android:id="@+id/Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter the weight"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="To name : "/>
        <EditText
            android:id="@+id/ToName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter toName here."
            android:inputType="text"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="storage location : "/>
        <EditText
            android:id="@+id/StorageLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter storageLocation here."/>

    </LinearLayout> <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text ="destenation location : "/>
    <EditText
        android:id="@+id/DestenationLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter toLocation here."/>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="when the percal was send "/>
        <EditText
            android:id="@+id/SendDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter sendDate here in format dd/mm/yyyy."
            android:inputType="datetime"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="reciviedDate : "/>
        <EditText
            android:id="@+id/RecivedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter reciviedDate here in format dd/mm/yyyy."
            android:inputType="datetime"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="destenation phone number : "/>
        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter toPhoneNumber here."
            android:inputType="phone"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="destenation mail : "/>
        <EditText
            android:id="@+id/DdestenationMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter toMail here."
            android:inputType="textEmailAddress"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="deliver name : "/>
        <EditText
            android:id="@+id/DeliverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter deliverName here."/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text ="parcel Status : "/>
        <EditText
            android:id="@+id/ParcelStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter parcelStatus here  ."
            />
    </LinearLayout>

    <Button
        android:id="@+id/finishAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="finishAdd"
        />
</LinearLayout>
