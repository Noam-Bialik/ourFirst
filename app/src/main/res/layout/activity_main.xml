<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF00"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Hello , Please enter a location and id number of the storage"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/storageLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Storage Location"
        />


    <EditText
        android:id="@+id/idStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ID Storage"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <Button
            android:id="@+id/Store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#29b6f6"
            android:onClick="Store"
            android:text="Store and continue"
            android:textColor="#fafafa"
            />


    </LinearLayout>

</LinearLayout>